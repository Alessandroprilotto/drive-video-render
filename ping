name: ping (dispatch test)

on:
  repository_dispatch:  # niente "types": prende qualsiasi event_type

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Show event info
        run: |
          echo "Repository dispatch ricevuto"
          echo "Evento: $GITHUB_EVENT_NAME"
          echo "Payload:"
          cat $GITHUB_EVENT_PATH
